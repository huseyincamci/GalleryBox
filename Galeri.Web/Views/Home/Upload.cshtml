
@{
    ViewBag.Title = "Dosya Yükleme";
}

@section styles
{
    <style>
        .bar {
            background-color: #0094ff;
            height: 40px;
        }

        #fileList {
            padding: 10px;
            background-color: #f5f5f5;
        }

        #uploadBack {
            background-color: aliceblue;
            margin-top: 25px;
        }

        .progress {
            background-color: #ddd;
        }
    </style>
}

<div class="panel panel-info" id="uploadBack">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-2">
                <button id="btnUpload" class="btn btn-success btn-sm">Dosyaları Yükle</button>
            </div>
            <div class="col-md-3">
                <input type="file" id="fileUpload" multiple="multiple" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <h5>Genel Yüzde</h5>
                <em id="genelBoyut"></em>
                <div class="progress">
                    <div class="bar" id="overBar" style="width: 0%"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div id="fileList" class="hidden">

        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.fileupload.js"></script>
    <script src="~/Scripts/jquery.iframe-transport.js"></script>
    <script>
        var barCount = 0;
        $("#fileUpload").fileupload({
            dataType: "json",
            url: "/home/fileupload",
            limitConCurrentUploads: 1,
            sequentialUploads: true,
            progressInterval: 100,
            maxChunkSize: 10000,
            add: function (e, data) {
                barCount = 0;
                $("#fileList").removeClass("hidden");
                $("#fileList").append("<h5>Dosya Adı: " + data.files[0].name + "</h5>");
                $("#fileList").append("<h5>Dosya Boyutu: " + bytesToSize(data.files[0].size, 2) + "</h5>");
                $("#fileList").append("<div class='progress'><div class='bar' style='width: 0%' id='uploadingFile'></div></div>");
                $("#btnUpload").click(function () {
                    data.submit();
                });
            },
            done: function (e, data) {
                barCount++;
            },
            progressall: function (e, data) {
                var yuzde = parseInt(data.loaded / data.total * 100);
                $("#genelBoyut").html("Toplam Dosya Boyutu: " + bytesToSize(data.total, 2));
                $("#overBar").css("width", yuzde + '%');
            },
            progress: function (e, data) {
                var yuzde = parseInt(data.loaded / data.total * 100);
                $("#fileList .bar:eq(" + barCount + ")").css("width", yuzde + '%');
            }
        });

        function bytesToSize(bytes, precision) {
            var kilobyte = 1024;
            var megabyte = kilobyte * 1024;
            var gigabyte = megabyte * 1024;
            var terabyte = gigabyte * 1024;

            if ((bytes >= 0) && (bytes < kilobyte)) {
                return bytes + ' B';

            } else if ((bytes >= kilobyte) && (bytes < megabyte)) {
                return (bytes / kilobyte).toFixed(precision) + ' KB';

            } else if ((bytes >= megabyte) && (bytes < gigabyte)) {
                return (bytes / megabyte).toFixed(precision) + ' MB';

            } else if ((bytes >= gigabyte) && (bytes < terabyte)) {
                return (bytes / gigabyte).toFixed(precision) + ' GB';

            } else if (bytes >= terabyte) {
                return (bytes / terabyte).toFixed(precision) + ' TB';

            } else {
                return bytes + ' B';
            }
        }
    </script>
}

